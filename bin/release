#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

cat <<EOF
---
config_vars:
  JAVA_HOME: .jdk7
  JAVA_OPTS: -Dfile.encoding=UTF-8 -server -Xmx512m -XX:+UseCompressedOops
  RATPACK_SITE_OPTS: -Dratpack.port=\$PORT
EOF
if [ ! -f $BUILD_DIR/Procfile ]; then
cat <<EOF
default_process_types:
  # YOU WILL NEED TO CHANGE "DEMO7" TO BE YOUR APP's NAME!!
  web: build/install/demo7/bin/demo7 build/install/demo7/app/ratpack.groovy
EOF
fi
